<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ClinicAttendance.LoginPage">
 <Application.Resources>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="Black"> </Setter>
            <Setter Property="BarTextColor" Value="Violet"></Setter>
        </Style>
    </Application.Resources>


    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="10,-75,10,10">
            <Entry VerticalOptions="StartAndExpand" x:Name="usernameEntry" Placeholder="Username" IsSpellCheckEnabled="false"/>
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password"/>
             <Button Text="Sign in" Clicked="OnLoginButtonClicked" BackgroundColor="#028E6B" TextColor="White"/>
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>

  
</ContentPage>